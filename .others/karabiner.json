{
    "title": "myKarabiner",
    "rules": [
        {
            "description": "alt+tab to esc",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        },
                        "key_code": "tab"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },
        {
            "description": "ctrl+h to backspace",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        },
                        "key_code": "h"
                    },
                    "to": [
                        {
                            "repeat": true,
                            "key_code": "delete_or_backspace"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "command"
                            ]
                        },
                        "key_code": "h"
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": [
                                "command"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "lang2/lang1 to left/right_cmd",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "lazy": true
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 100
                    },
                    "to": [
                        {
                            "key_code": "right_command",
                            "lazy": true
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "japanese_kana"
                        }
                    ]
                }
            ]
        },
        {
            "description": "ctrl+f/b/p/n to arrows",
            "manipulators": [
                {
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "com\\.microsoft\\.VSCode",
                                "com\\.microsoft\\.VSCodeInsiders"
                            ]
                        }
                    ]
                },
                {
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "com\\.microsoft\\.VSCode",
                                "com\\.microsoft\\.VSCodeInsiders"
                            ]
                        }
                    ]
                },
                {
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "com\\.microsoft\\.VSCode",
                                "com\\.microsoft\\.VSCodeInsiders"
                            ]
                        }
                    ]
                },
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "com\\.microsoft\\.VSCode",
                                "com\\.microsoft\\.VSCodeInsiders"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}